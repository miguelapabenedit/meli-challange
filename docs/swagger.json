    "paths": {
        "/topsecret/": {
            "post": {
                "description": "returns the position and message of a given transmitter",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "branch"
                ],
                "summary": "Process a Batch of incoming satellites transmitions update",
                "operationId": "post-batch",
                "parameters": [
                    {
                        "description": "Satellite",
                        "name": "branch",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/entity.Satellite"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/entity.TransmitionResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/topsecret/order/66": {
            "delete": {
                "description": "deletes all the distances and messages from the satellites, for a fresh start.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "branch"
                ],
                "summary": "Executes the holy command to erase existing transmition",
                "operationId": "execute-order",
                "responses": {
                    "200": {
                        "description": ""
                    }
                }
            }
        },
        "/topsecret_split/": {
            "get": {
                "description": "Retrieves the information of the satellites base on tu current data",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "branch"
                ],
                "summary": "Try to retrieve the position and message of the transmition",
                "operationId": "get-transmition",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/entity.TransmitionResponse"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/topsecret_split/{satellite}": {
            "post": {
                "description": "updates a Satellite transmition data base on the",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "branch"
                ],
                "summary": "Updates a Satellite transmition data",
                "operationId": "post-satellite-message",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Satellite Name",
                        "name": "satellite",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Satellite",
                        "name": "branch",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/entity.Satellite"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": ""
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
